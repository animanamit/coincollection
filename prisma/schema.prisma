generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ruler {
  id Int @id @default(autoincrement())
  coins Coin[]
}

model Coin {
  id Int @id @default(autoincrement())
  ruler Ruler @relation(fields: [rulerId], references: [id])
  rulerId Int
  name String 
  variety String
  type String
  weight Float
  class String
  pictures String[]
  page Int
  remarks String
  rarity String
  rating Int
}